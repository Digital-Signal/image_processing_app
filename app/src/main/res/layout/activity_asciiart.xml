<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ASCIIArt">

    <TextView
        android:id="@+id/ascii_art"
        android:layout_width="391dp"
        android:layout_height="408dp"
        android:fontFamily="@font/courier_prime"
        android:lineSpacingMultiplier="0.6"
        android:textIsSelectable="true"
        android:textSize="4sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ascii_img" />

    <ImageView
        android:id="@+id/ascii_img"
        android:layout_width="359dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toTopOf="@+id/ascii_art"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>